<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/navigation_header_gradian"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_height="@dimen/dimen_50"
        android:layout_gravity="left"
        android:src="@drawable/nic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_20"
        android:orientation="vertical">


    <TextView
        android:id="@+id/tvUserName"
        style="@style/BlackTextForTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:gravity="start"
        android:text="@string/name_abc"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserMobileNumber"
        style="@style/BlackTextForTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:gravity="start"
        android:text="9812343583"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAppVersion"
        style="@style/BlackTextForTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:gravity="start"
        android:text="version1.0.0"
        android:textSize="@dimen/text_size_15SP"
        android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginBottom="@dimen/dimen_2"
            android:background="@color/colorBlack"/>

</LinearLayout>
</LinearLayout>