                            android:hint="@string/disablity"
                            android:visibility="visible" />

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/religionSpinner"
                            style="@style/CustomSpinner"
                            android:layout_marginLeft="@dimen/dimen_2"
                            android:layout_marginRight="@dimen/dimen_2"
                            android:hint="@string/religion"
                            android:visibility="visible" />

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/pipSpinner"
                            style="@style/CustomSpinner"
                            android:layout_marginLeft="@dimen/dimen_2"
                            android:layout_marginRight="@dimen/dimen_2"
                            android:hint="@string/pip_category"
                            android:visibility="visible" />

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/leaderSpinner"
                            style="@style/CustomSpinner"
                            android:layout_marginLeft="@dimen/dimen_2"
                            android:layout_marginRight="@dimen/dimen_2"
                            android:hint="@string/leader"
                            android:visibility="visible" />

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/educationSpinner"
                            style="@style/CustomSpinner"
                            android:layout_marginLeft="@dimen/dimen_2"
                            android:layout_marginRight="@dimen/dimen_2"
                            android:hint="@string/education_standered"
                            android:visibility="visible" />
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/AadharcarNumberETStyle"
                            android:id="@+id/otherEduTIL"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/otherEduET"
                                style="@style/AadharcarNumberETStyle"
                                android:hint="@string/other_education"
                                android:maxLines="1"
                                android:maxLength="40" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/shoopkeeperMBS"
                            style="@style/CustomSpinner"
                            android:layout_marginLeft="@dimen/dimen_2"
                            android:layout_marginRight="@dimen/dimen_2"
                            android:hint="@string/is_she_book_keeper"
                            android:visibility="visible" />
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/seccMSB"
                            style="@style/CustomSpinner"
                            android:layout_marginLeft="@dimen/dimen_2"
                            android:layout_marginRight="@dimen/dimen_2"
                            android:hint="@string/select_member_name_from_secc"
                            android:visibility="gone" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="15dp"
                            android:weightSum="2">
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/date_of_joining"/>
                            <TextView
                                android:id="@+id/dateOfJoiningTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorTextBlack"
                                android:textSize="@dimen/text_size_18SP"
                                android:padding="@dimen/space2dp"
                                android:background="@drawable/entred_textview_background"
                                android:text="06-10-1991"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/takAadhaarSelfiBtn"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/button_background"
                            android:text="@string/shg_member_photo"
                            android:visibility="gone"
                            android:textColor="@color/colorButtonBlue" />

                        <LinearLayout
                            android:id="@+id/aadharPhotoLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space5dp"
                            android:layout_marginBottom="@dimen/space5dp"
                            android:orientation="horizontal"
                            android:padding="@dimen/space2dp"
                            android:visibility="gone"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/member_photo" />

                                <Button
                                    android:id="@+id/takeAgainSelfiBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/button_background"
                                    android:text="@string/Take_again"
                                    android:textColor="@color/colorButtonBlue" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/aadharImageView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space2dp"
                                android:layout_weight="1"
                                android:padding="@dimen/space2dp"
                                android:src="@mipmap/ic_launcher" />
                        </LinearLayout>

                       <!-- <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/submitAadharBtn"
                            style="@style/CommonButton"
                            android:text="@string/submit_aadhar_details" />-->
                    </LinearLayout>
                </LinearLayout>

