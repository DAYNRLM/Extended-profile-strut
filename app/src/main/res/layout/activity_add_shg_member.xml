                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/button_background"
                            android:text="@string/Take_passbook_photo"
                            android:textColor="@color/colorButtonBlue" />
                        <LinearLayout
                            android:id="@+id/photoLinearLayout"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/space5dp"
                            android:layout_marginBottom="@dimen/space5dp"
                            android:padding="@dimen/space2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/passbook_photo" />
                                <Button
                                    android:id="@+id/takeAgainPassbookBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/button_background"
                                    android:text="@string/Take_again"
                                    android:textColor="@color/colorButtonBlue" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/passbookImageView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/space2dp"
                                android:layout_margin="@dimen/space2dp"
                                android:src="@mipmap/ic_launcher"/>
                        </LinearLayout>


                       <!-- <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/submitAccountBtn"
                            style="@style/CommonButton"
                            android:text="@string/submit_account_details" />-->
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--end bank detail layout-->


            <!--start insurance coverage layout-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="@dimen/dimen_10"
                android:elevation="@dimen/dimen_10"
                android:translationZ="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                android:padding="@dimen/space2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:padding="@dimen/space2dp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/MemberTitleStyle"
                        android:text="@string/insurance_coverage" />

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                       android:id="@+id/pmjjySpinner"
                        style="@style/CustomSpinner"
                        android:hint="@string/insurance_coverage_pmjjy" />
                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                       android:id="@+id/pmsbySpinner"
                        style="@style/CustomSpinner"
                        android:hint="@string/insurance_coverage_pmsby" />
                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                       android:id="@+id/lifeInsuranceSpinner"
                        style="@style/CustomSpinner"
                        android:hint="@string/insurance_coverage_life" />
                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/pensionSpinner"
                        style="@style/CustomSpinner"
                        android:hint="@string/insurance_coverage_pension" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <!--end insurance coverage layout-->


            <!--start final submission button layout-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="@dimen/dimen_10"
                android:elevation="@dimen/dimen_10"
                android:translationZ="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                android:padding="@dimen/space2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_margin="@dimen/dimen_10"
                        android:elevation="@dimen/dimen_10"
                        android:translationZ="@dimen/dimen_10"
                        app:cardCornerRadius="@dimen/dimen_10"
                        android:padding="@dimen/space2dp">
                        <TextView
                            android:id="@+id/saveDataBtn"
                            android:text="@string/save"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:gravity="center|center_vertical"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/space16dp"
                            android:textStyle="bold"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_margin="@dimen/dimen_10"
                        android:elevation="@dimen/dimen_10"
                        android:translationZ="@dimen/dimen_10"
                        app:cardCornerRadius="@dimen/dimen_10"
                        android:padding="@dimen/space2dp">

                        <TextView
                            android:id="@+id/backBtn"
                            android:text="@string/back"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:textColor="@color/colorBlack"
                            android:gravity="center|center_vertical"
                            android:textSize="@dimen/space16dp"
                            android:textStyle="bold"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!--end final submission button layout-->

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/footer_layout" />
    </LinearLayout>
</RelativeLayout>