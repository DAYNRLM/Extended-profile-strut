                                    android:maxLines="3"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/AadharTextinputLayout"
                                android:visibility="gone"
                                android:layout_weight="1.3">

                                <EditText
                                    android:id="@+id/pincodeET"
                                    style="@style/AadharcarEditTextStyle"
