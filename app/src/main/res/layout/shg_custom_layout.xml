<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorScreenBackGround"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:translationZ="@dimen/dimen_10"
        android:elevation="@dimen/dimen_10"
        app:cardCornerRadius="@dimen/dimen_10"
        android:layout_margin="@dimen/dimen_5"
        android:padding="@dimen/space2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/shgnameTv"
                        android:layout_weight="1.1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Title Name"
                        android:padding="@dimen/space2dp"
                        android:layout_marginLeft="@dimen/space5dp"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/text_size_15SP"
                        android:textStyle="bold"/>
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/shg_status"
                        android:text=""
                        android:layout_weight="0.9"
                        android:gravity="right"
                        android:padding="@dimen/space2dp"
                        android:textColor="@color/colorGreen"
                        android:textSize="@dimen/text_size_15SP"
                        android:textStyle="bold"/>

                  </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/space2dp"
                    android:layout_marginBottom="@dimen/space2dp"
                    android:background="@color/colorPrimaryDark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/total_shgs_members"
                        android:layout_weight="0.4"
                        android:layout_marginLeft="@dimen/space5dp"
                        android:padding="@dimen/space2dp"
                        android:textColor="@color/colorHintDark"
                        android:textSize="@dimen/text_size_15SP"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/totalShgMemberTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="20"
                        android:gravity="center_horizontal"
                        android:layout_weight="1.6"
                        android:textSize="@dimen/text_size_15SP"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/space2dp"
                    android:layout_marginBottom="@dimen/space2dp"
                    android:background="@color/colorPrimaryDark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aadhaar/Bank Captured"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/text_size_15SP"
                        android:padding="@dimen/space2dp"
                        android:textColor="@color/colorHintDark"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/space5dp"



                        >

                    </TextView>
                <TextView
                    android:layout_weight="1.6"
                    android:id="@+id/size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_15SP"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="xxx"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/space2dp"
                    android:textStyle="bold"
                   />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/space2dp"
                    android:layout_marginBottom="@dimen/space2dp"
                    android:background="@color/colorPrimaryDark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:id="@+id/change_shg_statusTV"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:text="@string/change_status"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/space5dp"
                        android:padding="@dimen/space2dp"
                        android:textColor="@color/colorHintDark"
                        android:textSize="@dimen/text_size_15SP"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/space20dp"
                        android:src="@drawable/ic_arrow_down_black_24"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="1.7">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimaryDark"
                        android:alpha="0.5"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>